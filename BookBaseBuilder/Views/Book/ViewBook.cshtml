@model Book

<h3> </h3>
<table class="table">
    <tr>
        <th>BookID</th>
        <th>Title</th>
        <th>Author</th>
        <th>Genre</th>
        <th>Characteristics</th>
        <th>ISBN</th>
    </tr>
    <tr>
        <td>@Model.BookID</td>
        <td>@Model.Title</td>
        <td>@Model.Author</td>
        <td>@Model.Genre</td>
        <td>@Model.Characteristics</td>
        <td>@Model.ISBN</td>
    </tr>
</table>

<div style="display: block">
    <a href="/Book/UpdateBook/@Model.BookID" class="update">Update this Book</a>
</div>

<div style="display: block">
    @using (Html.BeginForm("DeleteBook", "Book", "Post"))
    {
        <input type="hidden" asp-for="BookID" value="@Model.BookID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this book" class="update" />
    }
</div>

